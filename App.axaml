<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ExtendedClipboardAvalonia.App"
             xmlns:local="using:ExtendedClipboardAvalonia"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="Assets/Styles/ResourceDictionary.axaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

  <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Assets/Styles/Styles.axaml"/>
    </Application.Styles>

  <TrayIcon.Icons>
    <TrayIcons>
      <TrayIcon Icon="/Assets/clipboard.ico"
                ToolTipText="Extended Clipboard">
        <TrayIcon.Menu>
          <NativeMenu>
            <NativeMenuItem Header="Toggle Visibility" Click="ToggleVisibility_Click"/>
            <NativeMenuItem Header="Exit" Click="ExitButton_Click"/>
          </NativeMenu>
        </TrayIcon.Menu>
      </TrayIcon>

    </TrayIcons>
  </TrayIcon.Icons>

</Application>